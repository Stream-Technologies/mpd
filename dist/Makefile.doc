# $Id: Makefile.doc,v 1.6 2005/05/08 17:26:23 mbretter Exp $

PREFIX?=	/usr/local
DOCDIR?=	${PREFIX}/share/doc/mpd4

MPD_DOC_FILES+=	../README
MPD_DOC_FILES+=	mpd*.html
MPD_DOC_FILES+=	mpd.ps

MAN8=		mpd4.8
MANDIR=		${PREFIX}/man/man

depend:

clean cleandir:
	rm -f mpd4.8

all:		mpd4.8

mpd4.8:          mpd4.8.in
	sed -e "s,@PREFIX@,${PREFIX},g" < ${.ALLSRC} > ${.TARGET}

.if !defined(NOPORTDOCS)
afterinstall:
	[ -d ${DOCDIR} ] || mkdir ${DOCDIR}
	${INSTALL} -c -o ${DOCOWN} -g ${DOCGRP} -m ${DOCMODE} \
	    ${MPD_DOC_FILES} ${DOCDIR}
.endif

.include <bsd.prog.mk>
